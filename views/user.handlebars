    autem natus impedit provident repellendus temporibus ipsam nam, atque ratione itaque voluptas.
    <div id="myModal" class="modal">
        <div class="modal-content">
            <div class="modal-header w-100">
                <span id="searchSpan"class="close">&times;</span>
            </div>
            <div id="searchModalBody" class="modal-body row text-white darkBg container-fluid">
            </div>
        </div>
    </div>

    <div id="watchListModal" class="modal">
        <div class="modal-content">
            <div class="modal-header w-100">
                <span id="watchListSpan"class="close">&times;</span>
            </div>
            <div id="watchListModalBody" class="modal-body row text-white darkBg container-fluid">
            </div>
        </div>
    </div>

    {{#each listings}}
    <div class="card border-dark mb-3 col" id="newCard" style="margin: 20px;">
        <img src="https://via.placeholder.com/150" class="card-img-top" id="cardImage" alt="Placeholder">
        <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional
                content.
                This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
    </div>
    {{/each}}
</main>